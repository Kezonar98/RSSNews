# Root environment variables (single .env for all services)
MONGO_URI=mongodb://mongodb:27017

# Backend service URLs
NEWS_API_URL=http://localhost:8000/news
CATEGORIES_API_URL=http://localhost:8000/categories

# Database settings
DB_NAME=rss_db
COLLECTION_NAME=news

# RSS feed sources
RSS_FEEDS=https://rss.nytimes.com/services/xml/rss/nyt/World.xml, https://rss.cnn.com/rss/edition.rss,https://another.site/feed.xml,https://yetanother.site/rss

# CORS origins
CORS_ORIGINS=http://localhost:5173,http://localhost:5500,http://localhost:3000

# API limits
DEFAULT_LIMIT=20

# Frontend (Vite) client URLs
VITE_NEWS_API_URL=http://localhost:8000/news
VITE_CATEGORIES_API_URL=http://localhost:8000/categories